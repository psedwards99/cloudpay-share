    <!-- Create and search forms for cp:document -->
    <config evaluator="model-type" condition="cp:employeeDocument">
        <forms>
            <form>
                <field-visibility>
                    <show id="cm:name"/>
                    <show id="cm:content" force="true"/>
                    <show id="cm:title" force="true"/>
                    <show id="cm:description" force="true"/>
                    <show id="mimetype"/>
                    <show id="app:editInline" force="true"/>

                    <!-- CP custom props -->
                    <show id="cp:documentId" force="true"/>
                    <show id="cp:securityClassification"/>
                    <show id="cp:employerId" force="true"/>
                    <show id="cp:employeeNumber"/>
                    <!-- CP Payslip Aspect props -->
                    <show id="cp:payslipDate"/>
